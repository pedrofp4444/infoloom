---
import Image from "astro/components/Image.astro";
import logo from "../assets/logo.svg";
import AppSidebar from "./AppSidebar.vue";

const pages = [
    { label: "Unidades Curriculares", route: "/ucs" },
    { label: "Calend치rio", route: "/calendar" },
    { label: "Formul치rios", route: "/formulario" },
    { label: "Relat칩rios", route: "/reports" },
    { label: "Favoritas", route: "/favorites" },
    { label: "Contactos", route: "/contacts" },
