                class="flex items-center gap-3 hover:opacity-80 transition-opacity"
            >
                <Image
                    layout="fixed"
                    width={50}
                    height={50}
                    src={logo}
                    alt="Infoloom's Logo"
                    loading="eager"
                    class="rounded-full"
                />
                <div>
                    <h1 class="text-2xl font-semibold text-gray-800">
                        Infoloom
                    </h1>
                    <p class="text-sm text-gray-600">
                        Mestrado em Engenharia Inform치tica
                    </p>
                </div>
            </a>

            <ul class="hidden md:flex gap-8 text-sm font-medium items-center">
                {
                    pages.map(({ label, route }) => (
                        <li>
                            <a
                                href={route}
                                class="relative text-gray-800 hover:text-green-500 transition-colors duration-300"
                            >
                                {label}
                                <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-green-500 transition-all duration-300 group-hover:w-full" />
                            </a>
                        </li>
                    ))
                }
            </ul>

            <div class="md:hidden">
                <AppSidebar client:load />
            </div>
        </nav>
    </div>
</header>
