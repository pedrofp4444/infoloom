---
import MainLayout from "../layouts/MainLayout.astro";
import Chatbot from "@/components/Chatbot.vue";
---

<MainLayout>
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
        <div class="mb-6 sm:mb-8">
            <h1
                class="text-3xl sm:text-4xl font-bold text-foreground mb-3 sm:mb-4"
            >
                Chatbot
            </h1>
            <p class="text-base sm:text-lg text-muted-foreground">
                Fala com o assistente para obter informações sobre as unidades
                curriculares
            </p>
        </div>

        <Chatbot client:only="vue" />
    </main>
</MainLayout>
