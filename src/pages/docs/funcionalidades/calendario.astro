const agruparPorMes = (lista) => {
  const grupos = {}
  lista.forEach(a => {
    const data = new Date(a.data + 'T00:00:00')
    const mesAno = data.toLocaleDateString('pt-PT', { month: 'long', year: 'numeric' })
    if (!grupos[mesAno]) grupos[mesAno] = []
