---
import DocsLayout from "../../layouts/DocsLayout.astro";
import DocsBreadcrumb from "../../components/docs/DocsBreadcrumb.vue";
import DocsSection from "../../components/docs/DocsSection.vue";

const toc = [{ id: "introducao", title: "Introdução", level: 2 }];
---

<DocsLayout
    title="Introdução"
    description="Documentação da funcionalidade de Introdução da Infoloom."
    toc={toc}
>
    <DocsBreadcrumb
        items={[
            { label: "Documentação", href: "/docs" },
            { label: "Funcionalidades", href: "/docs/funcionalidades" },
            { label: "Introdução", href: "/docs/funcionalidades/introducao" },
        ]}
        client:load
    />

    <DocsSection id="introducao" title="Introdução" client:load>
        <p class="text-lg text-muted-foreground mt-2">Em desenvolvimento...</p>
    </DocsSection>
    <div class="mt-6 flex justify-center">
        <p class="text-xs text-muted-foreground italic text-center">
            Versão do documento: 1.0.0 • Última atualização: Outubro 2025 —
            Infoloom
        </p>
    </div>
</DocsLayout>
